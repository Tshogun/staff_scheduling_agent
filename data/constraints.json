{
  "max_hours_per_week": 40,
  "max_shifts_per_week": 5,
  "min_days_off_per_week": 1,
  "max_consecutive_work_days": 5,
  "min_rest_hours_between_shifts": 12,

  "night_shift_limit_per_week": 2,
  
  "shift_types": ["morning", "evening", "night"],
  "shift_times": {
    "morning": { "start": "07:00", "end": "15:00" },
    "evening": { "start": "15:00", "end": "23:00" },
    "night":   { "start": "23:00", "end": "07:00" }
  },

  "default_shift_duration_hours": 8,

  "enable_soft_constraints": true,
  "weight_preferred_shift_match": 5,
  "weight_avoided_shift_penalty": 3,
  "weight_overtime_penalty": 10,
  "weight_underscheduling_penalty": 7
}  